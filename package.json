{
  "name": "WoW Legends",
  "version": "1.0.0",
  "description": "RPG TCG game.",
  "main": "index.html",
  "scripts": {
    "start": "http-server . -p 8000",
    "dev:serve": "http-server . -p 8000 -c-1",
    "dev:watch": "node tools/dev-watch.mjs",
    "live-reload": "node tools/live-reload.mjs",
    "dev": "npm run dev:watch & npm run dev:serve",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --setupFilesAfterEnv=./jest.setup.js",
    "test:coverage": "npm run test -- --coverage",
    "simulate": "node tools/simulate.mjs",
    "ingest": "node tools/cards-ingest.mjs",
    "lint": "eslint . --ext .js,.mjs && echo ESLint scanned $(git ls-files '*.js' '*.mjs' | wc -l) JS files && htmlhint index.html",
    "train": "node tools/train.mjs",
    "optim": "node tools/optim.mjs",
    "eval": "node tools/eval.mjs",
    "bench": "node tools/bench.mjs"
  },
  "keywords": [],
  "author": "AI Agents",
  "license": "ISC",
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "optionalDependencies": {
    "gpu.js": "^2.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "sharp": "^0.33.4",
    "eslint": "^9.35.0",
    "globals": "^16.3.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2"
  },
  "type": "module"
}
